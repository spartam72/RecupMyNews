<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorStatusBarHome"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <!--    Zone pour l affichage du titre  -->

    <!--    Zone pour l affichage de l image d accueil  -->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="41dp"
        android:fontFamily="@font/baumans"
        android:gravity="center_horizontal"
        android:text="are here..."
        android:textColor="@color/colorBlack"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_hanging"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/baumans"
        android:gravity="center_horizontal"
        android:text="Don't miss them !"
        android:textColor="@color/colorBlack"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="363dp"
        android:layout_height="60dp"
        android:layout_below="@id/iv_hanging"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/baumans"
        android:gravity="center"
        android:text="All breaking news"
        android:textColor="@color/colorBlack"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/iv_hanging"
        android:layout_width="wrap_content"
        android:layout_height="283dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="218dp"
        android:padding="15dp"
        android:src="@drawable/breaking_news_red" />


</RelativeLayout>